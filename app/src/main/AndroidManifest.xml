<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kudasheva.noteskeeper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesKeeper"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".friends.FriendsActivity"
            android:exported="false" />
        <activity
            android:name=".notebrowse.NoteBrowseActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".createnote.CreateNoteActivity"
            android:exported="false"
            android:label="@string/new_note"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".notescroll.NotesScrollActivity"
            android:exported="false"
            android:label="@string/noteScroll_title"/>
        <activity
            android:exported="true"
            android:name=".splashscreen.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>