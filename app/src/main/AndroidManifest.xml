<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kudasheva.noteskeeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesKeeper">
        <activity
            android:name=".NoteBrowseActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateNoteActivity"
            android:exported="false"
            android:label="@string/new_note"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".NotesScrollActivity"
            android:exported="false"
            android:label="@string/noteScroll_title">
        </activity>
    </application>

</manifest>