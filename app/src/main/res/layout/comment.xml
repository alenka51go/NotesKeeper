<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="commentData"
            type="ru.kudasheva.noteskeeper.models.presentermodels.InfoCard" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/backdround_corners_comment_layout"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/name_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:text="@{commentData.name}"/>

        <TextView
            android:id="@+id/date_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:text="@{commentData.date}"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/background_corners"
            android:padding="10dp"
            android:text="@{commentData.text}"/>

    </LinearLayout>
</layout>