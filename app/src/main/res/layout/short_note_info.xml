<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/note">

    <TextView
        android:id="@+id/notes_header"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/notes_header_stub"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:textSize = "@dimen/short_note_header"/>

    <TextView
        android:id="@+id/notes_date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/notes_date_stub"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textSize = "@dimen/short_note_date"/>

</LinearLayout>